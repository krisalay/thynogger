{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "ES6",
      "ES2015",
      "ESNext"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "templates"
  ],
  "include": [
    "src/**/*"
  ]
}
